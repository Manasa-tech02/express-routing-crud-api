{
    "compilerOptions": {
        // File Layout
        // "rootDir": "./src",
        "outDir": "./dist",
        // Environment Settings
        "module": "nodenext",
        "target": "esnext",
        // Other Outputs
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        // Stricter Typechecking Options
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        // Recommended Options
        "strict": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "prisma/**/*",
        "prisma.config.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}